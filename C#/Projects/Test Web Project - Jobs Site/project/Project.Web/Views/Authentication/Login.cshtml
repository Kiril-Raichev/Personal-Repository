@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div style="margin-left: 428px" class="col-md-9 col-lg-6 col-xl-5">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                 class="img-fluid" alt="Sample image">
        </div>
        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>
        <div style="margin-top: 50px;margin-left:500px" class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <form asp-controller="Authentication" asp-action="Login" method="post">
                <!-- Email input -->
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password input -->
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <!-- Checkbox -->
                    <div class="form-check mb-0">
                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                        <label class="form-check-label" for="form2Example3">
                            Remember me
                        </label>
                    </div>
                </div>
                <div class="text-center text-lg-start mt-4 pt-2">
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Don't have an account? <a href="@Url.Action("Register","Authentication")" class="link-danger">Register</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>
