<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <h1 class="mb-5">A glimpse of our courses</h1>
        </div>
        <div class="row g-4 justify-content-center">
            @{
                HashSet<int> usedNums = new HashSet<int>();
            }

            @while (usedNums.Count < 3)
            {

                Random rnd = new Random();
                int num = rnd.Next(0, courses.Count);
                if (usedNums.Contains(num))
                {
                    continue;
                }

                usedNums.Add(num);
                var currentCourse = courses[num];
              

                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src=@Url.Content(currentCourse.ImgSource) alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">

                                @if (loggedUser == null)
                                {
                                    <a href="../Authentication/Register" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 30px 30px 30px 30px;">Join Now</a>
                                }
                                else if (loggedUser != null && loggedUser.Role == Poodle_E_Learning_Platform.Models.UserRole.Teacher)
                                {
                                    <a href="../courses/details/@currentCourse.Id" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 30px 30px 30px;">Read More</a>
                                }
                                else if (loggedUser != null && loggedUser.Role == Poodle_E_Learning_Platform.Models.UserRole.Student)
                                {
                                   
                                    var userCourse = this.userCourseRepository.GetByBothIds(currentCourse.Id, loggedUser.Id);
                                    
                                    if (loggedUser.UserCourses.Contains(userCourse))
                                    {
                                        <a href="../courses/details/@currentCourse.Id" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 30px 30px 30px;">Read More</a>
                                    }
                                    else
                                    {
                                        <a href="../courses/details/@currentCourse.Id" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 30px 30px 30px 30px;">Join Now</a>
                                    }
                                }
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            <h5 class="mb-4">@Url.Content(currentCourse.Title)</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="bi bi-person-circle text-primary me-2"></i>Head Teacher in charge: @currentCourse.CreatedBy</small>
                        </div>
                        <div class="d-flex border-top">
                            @if (currentCourse.Visibility == Poodle_E_Learning_Platform.Models.CourseVisibility.Public)
                            {
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-eye text-primary me-2"></i>@Url.Content(currentCourse.Visibility.ToString())</small>
                            }
                            else
                            {
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-eye-slash text-primary me-2"></i>@Url.Content(currentCourse.Visibility.ToString())</small>
                            }
                            @if (currentCourse.Duration > 60)
                            {
                                duration = $"{currentCourse.Duration / 60} Hrs {currentCourse.Duration % 60} Min";
                            }
                            else
                            {
                                duration = $"{currentCourse.Duration} Min";
                            }
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@duration</small>
                            <small class="flex-fill text-center py-2"><i class="bi bi-people-fill text-primary me-2"></i>@currentCourse.Users.Count Students</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses End -->

