@model IEnumerable<DAL.Models.Customer>
@{
    ViewData["Title"] = "View";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    
    <form asp-controller="Customer" asp-action="Index" method="get">
        Find by name:
        <input type="text" name="filterInput"/>
        <button style="border:none;background-color:white" type="submit">Search</button>
        |
        <a asp-controller="Customer" asp-action="Index">Back to Full List</a>
    </form>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortInput = ViewBag.NameSortParam })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.ActionLink("Address", "Index", new { sortInput = ViewBag.AddressSortParam })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>