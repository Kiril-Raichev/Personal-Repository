@model List<Product>

@{
    ViewData["Title"] = "EditAll";
}

<h1>EditAll</h1>
<form asp-action="EditAll">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    @for(int i =0;i<Model.Count;i++)
    {
        <h4>Product:</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">

                <div class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model[i].Id" class="control-label"></label>
                    <input asp-for="@Model[i].Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Name" class="control-label"></label>
                    <input asp-for="@Model[i].Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Price" class="control-label"></label>
                    <input asp-for="@Model[i].Price" class="form-control" />
                    <span asp-validation-for="@Model[i].Price" class="text-danger"></span>
                </div>
            </div>
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
